<?xml version="1.0"?>
<PropertyList>
   <particlesystem>
	    <name>blaze</name>
			<type>normal</type>
      <texture>blaze.png</texture>
	    <emissive>true</emissive>
	    <lighting>false</lighting>
	    
	    <offsets>
	      <x-m>0</x-m>
	      <y-m>0</y-m>
	      <z-m>0</z-m>
	      <!--<pitch-deg>90</pitch-deg>-->
	    </offsets>
	      
	    <attach>local</attach>
	    
	    <placer>
	      <type>point</type>
	    </placer>

	    
	    <shooter>
	      <theta-min-deg>0</theta-min-deg>
	      <theta-max-deg>180</theta-max-deg>
	      <phi-min-deg>0</phi-min-deg>
	      <phi-max-deg>360</phi-max-deg>
	      <speed-mps>
	        <value>550</value>
	        <spread>2.5</spread>
	      </speed-mps>
	      <rotation-speed>
	        <x-min-deg-sec>0</x-min-deg-sec>
